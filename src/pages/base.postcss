.user-input{
  position: relative;
  width: 100%;
  line-height:36px;
}

.user-input input{
  width:100%;
  background:#fff; 
  color:#9B9B9B;
  font-size:10px;
  padding:0px; 
  font-family: "微软雅黑";
}

.user-input1{
  border-bottom:0.5px solid #f6f6f6;
}

.base-set{
  color:#000; 
  float: right;
  font-size:11px;
  position: absolute;
  bottom: 65px;
  right: 25px; 
}

.user-send-vcode{
  float: right;
  position: absolute; 
  right:0px; 
  top: 10px; 
  font-size:8px; 
  color:#9B9B9B; 
  height:20px; 
  line-height:18px;  
  text-align: center; 
  border-radius: 2px; 
  width:58px; 
  border:0.5px solid #f5f5f5;
}

.user-send-vcode:active{
  background: #FAFAFA;
}

.base-login{
  width:298px;
  margin: 0 auto;
  text-align:center;
  height: 34px;
  line-height: 34px;
  background: #fff;
  margin-top:42px;
  font-size:11px;
  color:#000; 
  border-radius: 2px; 
  border:0.5px solid #9B9B9B;
}

.base-reg{
  width:298px;
  margin: 0 auto;
  text-align:center;
  height: 34px;
  line-height: 34px;
  background: #fff;
  font-size:11px;
  color:#000; 
  border-radius: 2px; 
  border:0.5px solid #9B9B9B;
}



.base-reg:active{
  background:#fafafa;
}

.base-login:active{
  background: #fafafa;
}

.base-bind:active{
  background: #fafafa;
}

.base-phone{
  color: #d70000; 
  font-size: 8px; 
  float: right;
  position: absolute; 
  right: 0px; 
  top: 2px;
}

.base-password{
  color: #d70000; 
