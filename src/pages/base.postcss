@reset-global mobile;

ul, ol {
  @reset-nested list;
}

body{
  margin: 0;
  padding: 0;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  max-width: 100%;
  overflow-x:hidden;
  font-family:PingFang SC, Microsoft YaHei, Source Sans Pro, Helvetica, sans-serif;
  user-select: none;
  height: 100%;
  font-size: 11px;

}

html {
  height: 100%;
  list-style: none;
  background:#fff;
  max-width: 100%;
  overflow-x:hidden;
}

input, button {
    outline: none;
    border: 0;
    background: transparent;
}

ul,li,ol{
  list-style: none;
  margin: 0;
  padding: 0;
}

::-webkit-scrollbar { 
  display: none; 
}

#app {
  width: 100%;
  height: 100%;
  a {
    text-decoration: none;
  }
}
.bg-white{
  background:#fff;
  min-height:100%;
}
.bg-gray{
  background: #f5f5f5;
      min-height: 100%;
}

.clearfloat {zoom:1;margin-bottom: 1rem;}
.clearfloat::after {clear:both;content:'.';display:block;width: 0;height: 0;visibility:hidden;}

body,ul,p,h1,h2,h3,h4,dl,dd,form,input{
  padding:0;margin:0;
}

li{
  list-style:none;
}

img{
  border:none;vertical-align:top;
}


a:active{
 background: #fafafa;
}

i{
  font-style: normal;
}

input,textarea,select,lable{ 
  outline:none; border:none;
}

em{
  font-style:normal;
}

table { 
  border-collapse: collapse; 
}

input { 
  -webkit-appearance : none; 
}

.fl{
  float:left;
}

.fr{
  float:right;
}
.clear{
  zoom:1;
}

.clear:after{
  content:"";display:block;clear:both;
}


.base-width{
  width:290px; margin: 0 auto;
}

.base-bg{
  width:300px; margin: 0 auto;
}

.base-tab{
  width:100%; 
  height:40px; 
  border-bottom: 0.5px solid #eee; 
  line-height: 40px;
  background: #fff;
  li{
    float: left;
    a{
      font-size:11px; 
      color:#7d7d7d; 
      display: block; 
      height:39px; 
      line-height: 40px;

      &:active{
       background: #fafafa;
      }

    }
    .current{
0.5px      border-bottom:0.5px solid #000; 
      color:#000;
    }
  }
}
 
.mint-header-title{
  font-weight:500;
}
.mint-header{
  font-size:11px;
  font-weight:400;
}

